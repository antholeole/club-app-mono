{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.ts$",
    "collectCoverageFrom": [
        "src/**/*.{ts,js}"
    ],
    "globals": {
        "ENVIRONMENT": "dev",
        "SECRET": "FAKE SECRET"
    },
    "setupFiles": [
        "<rootDir>/test/jest.setup_env.ts"
      ],
      "setupFilesAfterEnv": ["<rootDir>/test/jest.setup_hooks.ts"],
      "restoreMocks": true,
      "roots": ["<rootDir>", "<rootDir>/src/", "<rootDir>/test/"],
      "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": -10
        },
        "testPathIgnorePatterns" : [
            "<rootDir>/src/index.ts",
            "<rootDir>/src/constants.ts",
            "**/gql_queries.ts"
          ]
      }
}