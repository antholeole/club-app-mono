{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.ts$",
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!**/router.ts",
        "!**/gql_queries.ts",
        "!src/constants.ts",
        "!src/index.ts",
        "!src/messages/*",
        "!src/routers/index.ts",
        "!**/types.ts"
    ],
    "globals": {
        "ENVIRONMENT": "dev",
        "SECRET": "FAKE SECRET",
        "HASURA_PASSWORD": "FAKE PASS"
    },
    "silent": true,
    "setupFiles": [
        "<rootDir>/test/jest.setup_env.ts"
      ],
      "setupFilesAfterEnv": ["<rootDir>/test/jest.setup_hooks.ts"],
      "restoreMocks": true,
      "roots": ["<rootDir>", "<rootDir>/src/", "<rootDir>/test/"],
      "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": -10
        }
      }
}