{
  "name": "club-app-be",
  "version": "1.0.0",
  "description": "A container for both club-app-worker and club-app-ws",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "ws-dev": "npm run --prefix ./club-app-ws dev",
    "ws-deploy": "npm run --prefix ./club-app-ws deploy",
    "worker-dev": "npm run --prefix ./club-app-worker dev",
    "worker-deploy": "npm run --prefix ./club-app-worker deploy",
    "dev": "concurrently -c \"green.bold,cyan.bold\" -n \"WORKER,API-GATEWAY\" \"npm:worker-dev\" \"npm:ws-dev\"",
    "deploy": "concurrently -c \"green.bold,cyan.bold\" -n \"WORKER,API-GATEWAY\" \"npm:worker-deploy\" \"npm:ws-deploy\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.0.0"
  }
}
