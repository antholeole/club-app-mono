{
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "protocol": "inspector"
        },
        {
            "name": "Run Worker Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--coverage",
                "false",
                "--config",
                "jestconfig.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
    ]
}