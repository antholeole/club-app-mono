{
    "configurations": [
        {
            "name": "Run Worker Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--coverage",
                "false",
                "--config",
                "jestconfig.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
    ]
}