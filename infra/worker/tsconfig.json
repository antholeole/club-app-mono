{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "types": [
        "node",
      ],
    },
  },
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2018",
    "lib": [
      "es2018",
      "webworker"
    ],
    "alwaysStrict": true,
    "incremental": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock"
    ]
  },
  "files": [
    "decs.d.ts"
  ],
  "include": [
    "src",
    "test",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "start.mjs"
  ]
}